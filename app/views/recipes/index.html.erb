<h2>recipes index</h2>
<%= link_to 'Home', root_path %> 
<%= link_to 'Show Recipes', recipes_path %>
<%= link_to 'New Recipes', new_recipe_path %>

<table>
  <tr>
    <th>Recipe Name</th>
    <th>Ingredients</th>
  </tr>
 
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.ingredients%></td>
      <td><%= link_to 'Show', recipe_path(recipe) %></td>
      <td><%= link_to 'Edit', recipe_path(recipe) %></td>
      <td><%= link_to 'Delete', recipe_path(recipe), method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>